@model IEnumerable<HeavenofBooks.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3">
    @foreach(var products in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                    <div class="card">
                        <img src="@products.ImageUrl" class="card-img-top rounded"/>
                        <div class="card-body">
                        <div class="pl-1">
                            <p class="card-title h5 text-primary">@products.Title</p>
                            <p class="card-title text-secondary">by @products.Author</p>
                        </div>
                        <div class="pl-1">
                            <p>List Price: <strike><b>$@products.ListPrice.ToString("0.00")</b></strike></p>
                            <p>As low as: <b>$@products.Price100.ToString("0.00")</b></p>
                        </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-dark form-control" asp-route-id="@products.Id">
                            Details
                        </a>
                    </div>
                    
                </div>

            </div>

        </div>
    }
</div>